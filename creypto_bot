import requests
from bs4 import BeautifulSoup
from telegram import Bot
import schedule
import time
import os

# دریافت توکن و نام کانال از محیط (برای امنیت بیشتر)
BOT_TOKEN = os.getenv('BOT_TOKEN')
CHANNEL_USERNAME = os.getenv('CHANNEL_USERNAME')

def get_selected_data():
    url = 'https://www.bonbast.com'
    response = requests.get(url)
    soup = BeautifulSoup(response.text, 'html.parser')

    # لیست فارسی موارد مورد نظر با ایموجی
    targets = {
        'دلار آمریکا': '💵',
        'بیت‌کوین': '🪙',
        'تتر': '💳',
        'سکه امامی': '🏅',
        'نیم سکه': '🥈',
        'ربع سکه': '🥉',
        'طلا ۱۸ عیار': '🔸',
        'یورو': '🌍',
        'پوند': '🇬🇧',
        'درهم امارات': '🇦🇪'
    }

    result = '📊 قیمت‌های منتخب بازار ارز و طلا:\n\n'

    for row in soup.find_all('tr'):
        cells = row.find_all('td')
        if len(cells) >= 2:
            name = cells[0].text.strip()
            price = cells[1].text.strip()
            for target_name, emoji in targets.items():
                if target_name in name:
                    result += f'{emoji} {name}: {price} ریال\n'

    result += '\n#دلار #بیتکوین #تتر #سکه #طلا #یورو #پوند #درهم #ارزدیجیتال #بازار #اقتصاد #قیمت_لحظه‌ای #تحلیل_بازار #مالی #سرمایه‌گذاری #کریپتو #رمزارز #بورس #ریال #ارز #طلا_و_سکه #سکه_امامی #نیم_سکه #ربع_سکه #طلا۱۸عیار'
    return result

def send_to_channel():
    bot = Bot(token=BOT_TOKEN)
    message = get_selected_data()
    bot.send_message(chat_id=CHANNEL_USERNAME, text=message)

# زمان‌بندی هر ۱۵ دقیقه
schedule.every(15).minutes.do(send_to_channel)

# اجرای دائمی
while True:
    schedule.run_pending()
    time.sleep(1)
